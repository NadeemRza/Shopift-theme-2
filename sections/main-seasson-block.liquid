<h1 class="heading">{{ section.settings.main_heading_text }}</h1>
<div class="custom-grid">
  {% for block in section.blocks %}
    <div>
      <div class="container">
        {% assign mobile_image = block.settings.image_mobile | default: blocks.settings.image %}
        {% render 'image', class: '', mobileSrc: mobile_image, desktopSrc: block.settings.image %}
        <div class="{{block.settings.content_position}}">
          <div class="container_items {{block.settings.text_alignment}}">
            <h2 class="heading-block">{{ block.settings.heading_text }}</h2>
            <a>
              <button class="btn">{{ block.settings.button_text }}</button>
            </a>
          </div>
        </div>
      </div>
    </div>
  {% endfor %}
</div>

{% style %}
  .container {
    position: relative;
  }

  .container_items {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  .custom-grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 0.5rem;
  }

  .heading {
    text-align: {{ section.settings.main_heading_position}}
    ;
    color: {{ section.settings.main_heading_text_color}}
    ;
  }

  {% for block in section.blocks %}
    .heading-{{ block.id}}{
      color: {{ block.settings.heading_text_color}}
    }
    .btn-{{ block.id}}{
      background-color: {{ block.settings.button_bcg_color}}
      ;
      color: {{ block.settings.button_text_color}}
      ;
    }
  {% endfor %}
{% endstyle %}

{% schema %}
  {
    "name": "season block",
    "class": "season block",
    "settings": [
      {
        "type": "text",
        "id": "main_heading_text",
        "label": "Heading Text",
        "default": "<p>SPRING/SUMMER.<br /> SHOP THE NEW SEASON NOW</p>"
      }, {
        "type": "select",
        "id": "main_heading_position",
        "label": "Main Heading position",
        "options": [
          {
            "value": "left",
            "label": "Left"
          }, {
            "value": "center",
            "label": "Center"
          }, {
            "value": "right",
            "label": "Right"
          }
        ],
        "default": "center"
      }, {
        "type": "color",
        "id": "main_heading_text_color",
        "label": "Main Heading Color",
        "default": "#fff"
      }

    ],
    "blocks": [
      {
        "type": "season-block",
        "name": "season-block",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image",
            "info": "1200 x 500px .jpg recommended"
          },
          {
            "type": "image_picker",
            "id": "image_mobile",
            "label": "Image (Mobile)",
            "info": "600 x 800px .jpg recommended"
          },
          {
            "type": "text",
            "id": "heading_text",
            "label": "Heading Text",
            "default": "BOTTOMS"
          },
          {
            "type": "color",
            "id": "heading_text_color",
            "label": "Heading Color",
            "default": "#fff"
          }, {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "SHOP NEW IN"
          }, {
            "type": "url",
            "id": "button_link",
            "label": "Button URL 1"
          }, {
            "type": "color",
            "id": "button_bcg_color",
            "label": "Button Background Color",
            "default": "#000"
          }, {
            "type": "color",
            "id": "button_text_color",
            "label": "Button Text Color",
            "default": "#fff"
          }, {
            "type": "select",
            "id": "content_position",
            "label": "Content position",
            "options": [
              {
                "value": "align-start justify-start",
                "label": "Top left"
              },
              {
                "value": "align-start justify-center",
                "label": "Top center"
              },
              {
                "value": "align-start justify-end",
                "label": "Top right"
              },
              {
                "value": "align-center justify-start",
                "label": "Middle left"
              }, {
                "value": "align-center justify-center",
                "label": "Middle center"
              }, {
                "value": "align-center justify-end",
                "label": "Middle right"
              }, {
                "value": "align-end justify-start",
                "label": "Bottom left"
              }, {
                "value": "align-end justify-center",
                "label": "Bottom center"
              }, {
                "value": "align-end justify-end",
                "label": "Bottom right"
              }
            ],
            "default": "align-end justify-start"
          }, {
            "type": "select",
            "id": "text_alignment",
            "label": "Text alignment",
            "options": [
              {
                "value": "text-left",
                "label": "Left"
              }, {
                "value": "text-center",
                "label": "Center"
              }, {
                "value": "text-right",
                "label": "Right"
              }
            ],
            "default": "text-left"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "season block"
      }
    ]
  }
{% endschema %}